IRIT_DIR = ./irit-sm
include $(IRIT_DIR)/makeflag.unx

CC         = g++
CFLAGS = -Wc++11-compat -Wextra -std=c++11 -O0 -g
OBJECTS = common.o iritSkel.o obj.o voxelizer.o
HEADERS = $(wildcard *.h)

voxelizer: $(OBJECTS) $(HEADERS) makefile.unx main.o
	$(CC) $(CFLAGS) -o voxelizer  $(IRIT_LIBS) $(OBJECTS) main.o

clean:
	rm -f *.o *.a voxelizer

%.o: %.cpp $(HEADERS)
	$(CC) $(CFLAGS) -c $< -o $@
